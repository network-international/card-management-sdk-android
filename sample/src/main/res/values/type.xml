<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- This file contains TextAppearances, text size dimensions -->

    <style name="TextAppearance.App.SDKTaskButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="TextAppearance.App.Body.Strong">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Body.SlimTransparency">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_80</item>
    </style>

    <!-- Card elements custom styles -->
    <!-- CardNumber -->
    <style name="TextAppearance.App.CardElement.CardNumberLabel" parent="TextAppearance.App.Body.SlimTransparency" >
        <item name="android:textColor">@color/white_80</item>
    </style>
    <style name="TextAppearance.App.CardElement.CardNumberData" parent="TextAppearance.App.Body" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_80</item>
    </style>
    <!-- CardHolder -->
    <style name="TextAppearance.App.CardElement.CardHolderLabel" parent="TextAppearance.App.Body.SlimTransparency" />
    <style name="TextAppearance.App.CardElement.CardHolderData" parent="TextAppearance.App.Body" />
    <!-- CardExpiry -->
    <style name="TextAppearance.App.CardElement.CardExpiryLabel" parent="TextAppearance.App.Body.SlimTransparency" />
    <style name="TextAppearance.App.CardElement.CardExpiryData" parent="TextAppearance.App.Body" />
    <!-- CardCvv -->
    <style name="TextAppearance.App.CardElement.CardCvvLabel" parent="TextAppearance.App.Body.SlimTransparency" />
    <style name="TextAppearance.App.CardElement.CardCvvData" parent="TextAppearance.App.Body" >
        <item name="android:textColor">@color/colorAccentApp</item>
    </style>
</resources>