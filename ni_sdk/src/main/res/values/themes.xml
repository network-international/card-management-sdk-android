<resources>

    <!-- This file contains Themes and ThemeOverlays -->

    <!-- Base application theme. -->
    <style name="Theme.NICardManagementSDK" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your base theme here. -->
    </style>

    <!--Default Top Level application theme-->
    <style name="Theme.NICardManagementSDK.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Custom attributes -->
        <item name="colorDisabledImageButton">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.Number" parent="Theme.NICardManagementSDK.DayNight">
        // the button text color
        <item name="colorAccent">?android:attr/textColorPrimary</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.ImageButton" parent="">
        // the button background tint color
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.ProgressBar" parent="">
        <item name="colorAccent">@color/white_transparency</item>
    </style>

</resources>