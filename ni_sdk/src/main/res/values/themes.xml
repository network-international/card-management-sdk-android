<resources>

    <!-- This file contains Themes and ThemeOverlays -->

    <!-- Base application theme. -->
    <style name="Theme.NICardManagementSDK" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your base theme here. -->
        // bullets and inactive "done" button state color
        <item name="colorDisabledImageButton">@color/gray3</item>
    </style>

    <!--Default Top Level application theme-->
    <style name="Theme.NICardManagementSDK.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Custom attributes -->
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.ImageButton" parent="">
        // the button background tint color
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.ProgressBar" parent="">
        // the spinner color
        <item name="colorAccent">@color/white_80</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme" parent="">
        // bullets and inactive "done" button state color
        <item name="colorDisabledImageButton">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme.Auto">
        // text color
        <item name="textColorCustom">?android:textColorPrimary</item>
        // page background color
        <item name="backgroundColorCustom">?android:colorBackground</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme.DayBase">
        // text color
        <item name="textColorCustom">@color/black_85</item>
        // page background color
        <item name="backgroundColorCustom">@color/gray_5</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme.Day" parent="ThemeOverlay.NICardManagementSDK.DialogTheme.DayBase" />

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme.NightBase">
        // text color
        <item name="textColorCustom">@color/white</item>
        // page background color
        <item name="backgroundColorCustom">@color/gray_850</item>
        // status bar color for nigh mode
        <item name="android:statusBarColor">@color/gray_850</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme.NightAppCompat" parent="ThemeOverlay.NICardManagementSDK.DialogTheme.NightBase" />

    <style name="ThemeOverlay.NICardManagementSDK.DialogTheme.NightMaterial" parent="ThemeOverlay.NICardManagementSDK.DialogTheme.NightAppCompat">
        // page background color
        <item name="backgroundColorCustom">@color/black_material</item>
        // status bar color for nigh mode
        <item name="android:statusBarColor">@color/black_material</item>
    </style>

</resources>